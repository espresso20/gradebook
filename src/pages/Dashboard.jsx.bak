import { Link } from 'react-router-dom'
import { GraduationCap, BookOpen, Calendar, TrendingUp, ChevronRight } from 'lucide-react'
import db from '../lib/store'
import { getGradeColorClass } from '../lib/database'

export default function Dashboard({ students }) {
  const schoolYear = db.getActiveSchoolYear()

  return (
    <div className="p-6 lg:p-8 max-w-6xl mx-auto">
      {/* Header */}
      <div className="mb-8">
        <h1 className="font-display text-3xl font-bold text-warmgray-800 dark:text-gray-100">
          Dashboard
        </h1>
        <p className="text-warmgray-500 dark:text-gray-400 mt-1">
          {schoolYear?.name || 'Current'} School Year Overview
        </p>
      </div>

      {/* Student Cards */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {students.map(student => (
          <StudentCard
            key={student.id}
            student={student}
            schoolYearId={schoolYear?.id}
          />
        ))}
      </div>

      {/* Quick tips for new users */}
      {students.length === 1 && (
        <div className="mt-10 card bg-gradient-to-r from-sage-50 to-cream-50 dark:from-sage-900/20 dark:to-cream-900/10 border-sage-200 dark:border-sage-800">
          <div className="flex items-start gap-4">
            <div className="w-10 h-10 rounded-lg bg-sage-500 flex items-center justify-center flex-shrink-0">
              <TrendingUp className="w-5 h-5 text-white" />
            </div>
            <div>
              <h3 className="font-semibold text-warmgray-800 dark:text-gray-100 mb-1">Getting Started</h3>
              <p className="text-sm text-warmgray-600 dark:text-gray-300">
                Click on your student's card to add courses and start tracking grades.
                You can customize grade categories and weights for each course to match your curriculum.
              </p>
            </div>
          </div>
        </div>
      )}
    </div>
  )
}

function StudentCard({ student, schoolYearId }) {
  const summary = db.getStudentSummary(student.id, schoolYearId)
  const gradingScale = db.getGradingScale()

  // Get overall letter grade
  let overallGrade = null
  if (summary?.gpa !== null) {
    // Convert GPA back to approximate letter grade for display
    if (summary.gpa >= 3.5) overallGrade = 'A'
    else if (summary.gpa >= 2.5) overallGrade = 'B'
    else if (summary.gpa >= 1.5) overallGrade = 'C'
    else if (summary.gpa >= 0.5) overallGrade = 'D'
    else overallGrade = 'F'
  }

  return (
    <Link
      to={`/student/${student.id}`}
      className="card hover:shadow-warm-lg transition-all duration-200 hover:-translate-y-1 group"
    >
      <div className="flex items-start justify-between mb-4">
        <div className="flex items-center gap-3">
          {/* Avatar */}
          <div className="w-12 h-12 rounded-full bg-gradient-to-br from-terracotta-400 to-terracotta-600 flex items-center justify-center text-white text-lg font-semibold">
            {student.first_name.charAt(0)}
            {student.last_name?.charAt(0) || ''}
          </div>
          <div>
            <h3 className="font-semibold text-warmgray-800 dark:text-gray-100 group-hover:text-terracotta-600 dark:group-hover:text-terracotta-400 transition-colors">
              {student.first_name} {student.last_name}
            </h3>
            {student.grade_level && (
              <p className="text-sm text-warmgray-500 dark:text-gray-400">{student.grade_level}</p>
            )}
          </div>
        </div>
        <ChevronRight className="w-5 h-5 text-warmgray-300 dark:text-gray-500 group-hover:text-terracotta-400 transition-colors" />
      </div>

      {/* Stats */}
      <div className="grid grid-cols-3 gap-4 pt-4 border-t border-warmgray-100 dark:border-gray-700">
        {/* GPA / Overall Grade */}
        <div className="text-center">
          <div className="text-xs text-warmgray-500 dark:text-gray-400 mb-1">Grade</div>
          {overallGrade ? (
            <span className={`grade-badge ${getGradeColorClass(overallGrade)}`}>
              {overallGrade}
            </span>
          ) : (
            <span className="text-sm text-warmgray-400 dark:text-gray-500">â€”</span>
          )}
        </div>

        {/* Courses */}
        <div className="text-center">
          <div className="text-xs text-warmgray-500 dark:text-gray-400 mb-1">Courses</div>
          <div className="flex items-center justify-center gap-1">
            <BookOpen className="w-4 h-4 text-sage-500" />
            <span className="font-semibold text-warmgray-700 dark:text-gray-200">
              {summary?.courses?.length || 0}
            </span>
          </div>
        </div>

        {/* Attendance */}
        <div className="text-center">
          <div className="text-xs text-warmgray-500 dark:text-gray-400 mb-1">Days</div>
          <div className="flex items-center justify-center gap-1">
            <Calendar className="w-4 h-4 text-gold-500" />
            <span className="font-semibold text-warmgray-700 dark:text-gray-200">
              {summary?.attendance?.total || 0}
            </span>
          </div>
        </div>
      </div>
    </Link>
  )
}
