{
  "name": "gradebook-app",
  "version": "1.0.13",
  "description": "A warm and approachable gradebook for homeschool families",
  "author": "Family Gradebook",
  "type": "module",
  "main": "electron/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/espresso20/gradebook.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "clean": "rm -rf dist dist-electron",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "generate:version": "node scripts/generate-version.js",
    "test:build": "node scripts/test-build.js",
    "release": "node scripts/release.js patch",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry-run": "node scripts/release.js patch --dry-run",
    "electron:build": "npm run clean && npm run generate:version && vite build && npx electron-builder",
    "electron:build:mac": "npm run clean && npm run generate:version && vite build && npx electron-builder --mac",
    "electron:build:win": "npm run clean && npm run generate:version && vite build && npx electron-builder --win",
    "electron:build:linux": "npm run clean && npm run generate:version && vite build && npx electron-builder --linux"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.family.gradebook",
    "productName": "Family Gradebook",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "espresso20",
      "repo": "gradebook"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
